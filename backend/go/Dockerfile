# Используем официальный образ Golang как базовый
FROM golang:1.22.4

# Установим рабочую директорию внутри контейнера
WORKDIR /app

# Копируем модульные файлы и устанавливаем зависимости
COPY go.mod go.sum ./
RUN go mod download

# Копируем исходный код
COPY . .

# Компилируем приложение
RUN go build -o main .

# Открываем порт, который будет использовать приложение
EXPOSE 8080

EXPOSE 6060

# Устанавливаем команду запуска контейнера
CMD ["./main"]